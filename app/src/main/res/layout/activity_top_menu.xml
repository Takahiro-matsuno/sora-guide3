<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
>

    <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/viewFlipper"
            app:layout_constraintBottom_toTopOf="@id/adsense_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
        >
            <ImageButton
                    android:id="@+id/airport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#b0d600"
                    android:layout_margin="4dp"
                    android:src="@drawable/service"
                    android:scaleType="fitCenter"
            />
            <ImageButton
                    android:id="@+id/stamp_rally"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#b0d600"
                    android:layout_margin="4dp"
                    android:src="@drawable/ar"
                    android:scaleType="fitCenter"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
        >
            <ImageButton
                    android:id="@+id/taxi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#b0d600"
                    android:layout_margin="4dp"
                    android:src="@drawable/taxi"
                    android:scaleType="fitCenter"
            />
            <ImageButton
                    android:id="@+id/sightseeing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#b0d600"
                    android:layout_margin="4dp"
                    android:src="@drawable/tourism"
                    android:scaleType="fitCenter"
            />
        </TableRow>
    </TableLayout>
    <FrameLayout
            android:id="@+id/adsense_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:background="@color/colorPrimary"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
