<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="検索条件を指定してください"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/textView_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検索エリア"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Spinner
        android:id="@+id/kenSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_area"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/frame_style"
        />

    <TextView
        android:id="@+id/textView_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="true"
        android:text="検索キーワード"
        app:layout_constraintTop_toBottomOf="@+id/kenSpinner"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/keywordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_keyword"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/frame_style"
        />
    <TextView
        android:id="@+id/textView_sonohoka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:text="その他詳細検索条件"
        app:layout_constraintTop_toBottomOf="@+id/keywordText"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textView_fortachiyori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="10sp"
        android:layout_marginStart="20dp"
        android:paddingStart="20dp"
        android:textAllCaps="true"
        android:text="立ち寄り時間"
        app:layout_constraintTop_toBottomOf="@+id/textView_sonohoka"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Spinner
        android:id="@+id/tachiyoriSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_fortachiyori"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/frame_style"
        />
    <Button
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:text="検索"
        app:layout_constraintTop_toBottomOf="@+id/tachiyoriSpinner"
        android:background="@drawable/frame_style4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

