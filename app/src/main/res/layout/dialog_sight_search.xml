<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="検索条件を指定してください"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/textView_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検索エリア"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Spinner
        android:id="@+id/kenSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_area"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/frame_style"
        />

    <TextView
        android:id="@+id/textView_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="true"
        android:text="検索キーワード"
        app:layout_constraintTop_toBottomOf="@+id/kenSpinner"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/keywordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_keyword"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textView_fortachiyori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:text="立ち寄り時間"
        app:layout_constraintTop_toBottomOf="@+id/keywordText"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Spinner
        android:id="@+id/tachiyoriSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_fortachiyori"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/frame_style"
        />

    <TextView
        android:id="@+id/textView_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:text="季節のおすすめで絞り込み"
        app:layout_constraintTop_toBottomOf="@+id/tachiyoriSpinner"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Spinner
        android:id="@+id/seasonSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_season"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/frame_style"
        />

    <TextView
        android:id="@+id/textView_inspiteofRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:text="雨でも楽しめるスポットを選択"
        app:layout_constraintTop_toBottomOf="@+id/seasonSpinner"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Spinner
        android:id="@+id/rainSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_inspiteofRain"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/frame_style"
        />


    <Button
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検索"
        app:layout_constraintTop_toBottomOf="@+id/rainSpinner"
        android:background="@drawable/frame_style4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

