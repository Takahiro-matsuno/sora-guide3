<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <TextView
            android:id="@+id/cpn_name"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cpn_close_btn"
            tools:text="クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名クーポン名"
    />

    <ImageView
            android:id="@+id/cpn_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_clear_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/cpn_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="VectorDrawableCompat"
    />

    <ImageView
            android:id="@+id/qr_image"
            android:layout_width="257dp"
            android:layout_height="244dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpn_close_btn"
    />

    <TextView
            android:id="@+id/cpn_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/qr_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text = "有効期限:2019/10/01~2019/10/31"
    />

    <Button
            android:id="@+id/cpn_use_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/coupon_use_button"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/cpn_expiry_date"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="64dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
