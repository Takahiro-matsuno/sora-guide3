<resources>
    <!-- アクションバーなし -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Default Activity Bar -->
    <style name="MyAppTheme" parent="AppTheme">
        <!-- Toolbar タイトル文字色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- menu 文字色 -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="AppToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- ToolBarのタイトルテキスト色 -->
        <item name="android:textColorPrimary">@color/green</item>
        <!-- ToolBarのオプションメニューのOverflowアイコンの色 -->
        <item name="android:textColorSecondary">@color/green</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SightSearchButtonStyle" parent="Theme.AppCompat">
        <!--ボタンの色-->
        <item name="colorButtonNormal">#66cdaa</item>
        <!--ボタンをプレスしている時、シークバーをプレスしている時の色-->
        <item name="colorControlHighlight">#008577</item>
    </style>

    <style name="MapButtonStyle" parent="Theme.AppCompat">
        <!--ボタンの色-->
        <item name="colorButtonNormal">#ffa500</item>
        <!--ボタンをプレスしている時、シークバーをプレスしている時の色-->
        <item name="colorControlHighlight">#aa00bcd4</item>
    </style>

</resources>
